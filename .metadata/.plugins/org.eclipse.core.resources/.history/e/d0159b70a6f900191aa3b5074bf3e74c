	@Override
	public CompanyEntity createCompany(CompanyBean companyBean) {
		ModelMapper mapper = new ModelMapper();
		CompanyEntity companyEntity = mapper.map(companyBean, CompanyEntity.class);
		return companyRepo.save(companyEntity);
	}

