	@Override
	public List<CompanyEntity> findCompanyId(int id) {
		List<CompanyEntity> companyEntity = null;
		try {
			companyEntity = companyRepo.findCompanyById(id);
		} catch (Exception e) {
			System.out.println(e);
		}
		return companyEntity;
	}

	@Override
	public List<CompanyEntity> findByCompanyName(String name) {
		List<CompanyEntity> companyEntity = null;
		try {
			companyEntity = companyRepo.findByCompanyName(name);
		} catch (Exception e) {
			System.out.println(e);
		}
		return companyEntity;
	}

